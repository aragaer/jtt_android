<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTheme" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/DarkActionBar</item>
    </style>

    <style name="BaseLightTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/DarkActionBar</item>
    </style>

    <style name="DarkTheme" parent="BaseTheme">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:radioButtonStyle">@style/JTTTabButton</item>
        <item name="glyph_stroke">#C0000000</item>
        <item name="wadokei_stroke">#C0FFFFFF</item>
        <item name="day_fill">@color/wadokei_fill</item>
        <item name="glyph_fill">#CCCCCC</item>
        <item name="night_fill">@color/night_fill</item>
        <item name="wadokei_fill">@color/wadokei_fill</item>
        <item name="text_stroke">@color/wadokei_fill</item>
        <item name="item_boundary">@drawable/today_border</item>
    </style>

    <style name="JTTTheme" parent="DarkTheme">
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowRadius">0.5</item>
        <item name="glyph_stroke">@color/wadokei_stroke</item>
        <item name="wadokei_stroke">@color/wadokei_stroke</item>
        <item name="day_fill">@color/wadokei_fill</item>
        <item name="glyph_fill">@color/night_fill</item>
        <item name="night_fill">@color/night_fill</item>
        <item name="wadokei_fill">@color/wadokei_fill</item>
        <item name="text_stroke">@android:color/white</item>
        <item name="text_color">#808080</item>
        <item name="text_shadow">@android:color/white</item>
    </style>

    <style name="LightTheme" parent="BaseLightTheme">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:radioButtonStyle">@style/JTTTabButtonInverted</item>
        <item name="glyph_stroke">#C0444444</item>
        <item name="wadokei_stroke">@color/wadokei_stroke</item>
        <item name="day_fill">@color/wadokei_fill</item>
        <item name="glyph_fill">@color/night_fill</item>
        <item name="night_fill">@android:color/darker_gray</item>
        <item name="wadokei_fill">@color/night_fill</item>
        <item name="text_stroke">@android:color/darker_gray</item>
        <item name="item_boundary">@drawable/today_border_dark</item>
        <item name="text_color">@color/tab</item>
    </style>

    <style name="SolidLight">
        <item name="glyph_stroke">#C0000000</item>
        <item name="wadokei_stroke">@android:color/background_dark</item>
        <item name="day_fill">@android:color/background_light</item>
        <item name="glyph_fill">@color/tab</item>
        <item name="night_fill">@color/night_fill</item>
        <item name="wadokei_fill">@android:color/background_light</item>
        <item name="widget_background">@color/wadokei_fill</item>
        <item name="text_color">@android:color/background_dark</item>
        <item name="text_shadow">@android:color/background_light</item>
    </style>

    <style name="SolidDark">
        <item name="glyph_stroke">#C0000000</item>
        <item name="wadokei_stroke">#C0FFFFFF</item>
        <item name="day_fill">#CCCCCC</item>
        <item name="glyph_fill">@android:color/white</item>
        <item name="night_fill">#444444</item>
        <item name="wadokei_fill">#444444</item>
        <item name="widget_background">@color/tab</item>
        <item name="text_color">@android:color/white</item>
        <item name="text_shadow">#444444</item>
    </style>

    <style name="JTTTabButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">@drawable/tab_text_selector</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="JTTTabButtonInverted" parent="JTTTabButton">
        <item name="android:textColor">@drawable/tab_text_selector_inverted</item>
    </style>

    <style name="DarkActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:displayOptions">showCustom</item>
        <item name="android:background">@color/background</item>
        <item name="android:height">@dimen/ab_height</item>
        <item name="android:backgroundStacked">@null</item>
        <item name="android:backgroundSplit">@null</item>
    </style>

    <style name="NotificationText" parent="android:TextAppearance.StatusBar.EventContent" />

    <style name="NotificationTitle" parent="android:TextAppearance.StatusBar.EventContent.Title" />

    <style name="NotificationGlyph" parent="android:TextAppearance.StatusBar.EventContent.Title">
        <item name="android:textSize">25dp</item>
    </style>

</resources>